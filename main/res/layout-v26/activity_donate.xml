<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/new_login"
    android:layout_height="match_parent"
    tools:context=".DonateActivity">

    <EditText
        android:id="@+id/etname"
        android:layout_width="366dp"
        android:layout_height="59dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/your_name"
        android:textColorHint="#9A9999"
        android:textSize="24sp"
        android:fontFamily="@font/alegreya_sc_bold_italic"
        android:textColor="#FFFFFF"
        android:autofillHints=""
        android:background="@drawable/black"
        android:layout_marginTop="69dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        />
    <EditText
        android:id="@+id/etfoodname"
        android:layout_width="366dp"
        android:layout_height="59dp"
        android:inputType="textPersonName"
        android:hint="@string/food_name"
        android:textColorHint="#9A9999"
        android:textSize="24sp"
        android:fontFamily="@font/alegreya_sc_bold_italic"
        android:textColor="#FFFFFF"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/etname"
        tools:ignore="HardcodedText"
        android:background="@drawable/black"
        />

    <EditText
        android:id="@+id/etquantity"
        android:layout_width="366dp"
        android:layout_height="59dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/contact_number"
        android:textColorHint="#9A9999"
        android:textSize="24sp"
        android:fontFamily="@font/alegreya_sc_bold_italic"
        android:textColor="#FFFFFF"
        android:background="@drawable/black"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/etfoodname"


        />

    <EditText
        android:id="@+id/etnum"
        android:layout_width="366dp"
        android:layout_height="59dp"
        android:ems="10"
        android:hint="Food quantity"
        android:textColorHint="#9A9999"
        android:inputType="textPersonName"
        android:textSize="24sp"
        android:fontFamily="@font/alegreya_sc_bold_italic"
        android:textColor="#FFFFFF"
        android:background="@drawable/black"

        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/etquantity"
        />


    <Button
        android:id="@+id/btnsubmit"
        android:layout_width="202dp"
        android:layout_height="59dp"
        android:text="@string/donate"

        android:textSize="24sp"
        android:fontFamily="@font/alegreya_sc_bold_italic"
        android:textColor="#000000"
        android:background="@android:drawable/divider_horizontal_textfield"
        android:layout_marginTop="15dp"
        android:layout_below="@id/etnum"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="10dp"


        />
</RelativeLayout>